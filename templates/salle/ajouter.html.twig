{% extends 'base.html.twig' %}

{% block title %}
	Ajouter une salle
{% endblock %}

{% block body %}
	<div style="margin-top: 20px;"></div>

	<div class="container">
		<h1 class="mt-4 mb-4" style="color: #fbae00; font-family: 'Permanent Marker', cursive;">Ajouter une salle</h1>

		{{ form_start(form) }}
		<div class="form-group">
			{{ form_label(form.nom, null, {'label_attr': {'style': 'font-family: "Permanent Marker", cursive; color: #fbae00;'}}) }}
			{{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
		</div>
		<div class="form-group">
			{{ form_label(form.nombrePlaces, null, {'label_attr': {'style': 'font-family: "Permanent Marker", cursive; color: #fbae00;'}}) }}
			{{ form_widget(form.nombrePlaces, { 'attr': {'class': 'form-control'} }) }}
		</div>
		<button type="submit" class="btn btn-primary" style="background-color: #fbae00;">Ajouter</button>
		{{ form_end(form) }}
	</div>
	<div style="margin-top: 20px;"></div>

{% endblock %}
