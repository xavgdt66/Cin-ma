{% extends 'base.html.twig' %}

{% block title %}Liste des salles{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-4 mb-4">Liste des salles</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Nombre de places</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for salle in salles %}
            <tr>
                <td>{{ salle.nom }}</td>
                <td>{{ salle.nombrePlaces }}</td>
                <td>
                    <a href="{{ path('editer_salle', {'id': salle.id}) }}" class="btn btn-sm btn-primary">Éditer</a>
                    <a href="{{ path('supprimer_salle', {'id': salle.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette salle ?')">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('ajouter_salle') }}" class="btn btn-success">Ajouter une salle</a>
</div>
{% endblock %}
