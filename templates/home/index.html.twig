{% extends 'base.html.twig' %}

{% block title %}
    Hello HomeController!
{% endblock %}

{% block body %}
    {% if users is defined and users %}
        <h1 class="text-center">Choisissez votre cinéma</h1>

        <div class="row justify-content-center">
            {% for user in users %}
                <div class="col-md-4">
                    <div class="card mb-3">
                        <div class="card-body d-flex flex-column align-items-center justify-content-center">
                            <h5 class="card-title text-center">{{ user.nomcinema }}</h5>
                            <a href="{{ path('user_profile', { id: user.id }) }}" class="btn btn-primary">Voir le profil</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    {% else %}
        <p class="text-center">Aucun utilisateur avec le rôle "cinema" trouvé.</p>
    {% endif %}
{% endblock %}
